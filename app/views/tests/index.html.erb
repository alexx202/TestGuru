<div class="row justify-content-start mt-3">
  <div class="col col-md-10 offset-md-1">
    <div class="table-responsive">
      <div><h1 class="text-center"><%= t('.header') %></h1></div>

      <table class="table table-hover table-light align-middle">
        <thead class="table-dark">
          <tr class="text-center">
            <th class="sort-by-title pointer">
              <%= t('.title') %>
              <%= octicon 'arrow-up', class: 'text-success hide' %>
              <%= octicon 'arrow-down', class: 'text-success hide' %>
            </th>
            <th><%= t('.level') %></th>
            <th><%= t('.author') %></th>
            <th><%= t('.category') %></th>
            <th><%= t('.number_of_question') %></th>
            <th><%= t('.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <%= render @tests %>
        </tbody>
      </table>
    </div>
  </div>
</div>
